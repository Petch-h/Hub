-- Gui to Lua
-- Version: 3.2

-- Instances:

local Fullmoon = Instance.new("ScreenGui")
local Fullmoon_2 = Instance.new("ImageLabel")

--Properties:

Fullmoon.Name = "Fullmoon"
Fullmoon.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
Fullmoon.ResetOnSpawn = false

Fullmoon_2.Name = "Fullmoon"
Fullmoon_2.Parent = Fullmoon
Fullmoon_2.Active = true
Fullmoon_2.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Fullmoon_2.BackgroundTransparency = 1.000
Fullmoon_2.BorderColor3 = Color3.fromRGB(0, 0, 0)
Fullmoon_2.Rotation = -180.000
Fullmoon_2.Size = UDim2.new(0, 100, 0, 100)

-- Scripts:

local function AQWM_fake_script() -- Fullmoon_2.LocalScript 
	local script = Instance.new('LocalScript', Fullmoon_2)

	repeat wait() until game:IsLoaded()
	
	local imagelabel = script.Parent
	local player = game.Players.LocalPlayer
	local mouse = player:GetMouse()
	local fullmoon = game:GetService("Lighting").Sky.MoonTextureId
	local function fullmoonagain()
		imagelabel.Image = fullmoon
		print("check full moon by pointed!")
	end
	
	--[[
	imagelabel.Image = fullmoon
	print("Check fullmoon!")
	imagelabel.MouseEnter:Connect(fullmoonagain)
	
	repeat wait()
		imagelabel.Image = fullmoon
		print("Check fullmoon!")
		imagelabel.MouseEnter:Connect(fullmoonagain)
	until game:Destroy()
	]]
	
	imagelabel.MouseEnter:Connect(fullmoonagain)
	
	while true do
		imagelabel.Image = fullmoon
		print("auto check full moon! (30s)")
		wait(30)
	end
end
coroutine.wrap(AQWM_fake_script)()

local StarterGui = game:GetService("StarterGui")

StarterGui:SetCore("SendNotification", {
	Title = "Check Full Moon By Petch.h",
	Text = "You can point at the image for a quick reset, Normally the image resets every 30s.",
	Duration = 3,
})
